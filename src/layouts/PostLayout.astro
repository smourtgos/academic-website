---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: Date;
  summary?: string;
  tags?: string[];
  lastModified?: Date;
}

const { title, date, summary, tags = [], lastModified } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
const formattedLastMod = lastModified?.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
---

<BaseLayout title={`${title} | Scott M. Mourtgos`} description={summary}>
  <article class="py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-8">
        <div class="flex items-center gap-2 mb-3">
          <a href="/posts" class="text-sm text-primary-600 dark:text-primary-400 hover:underline">&larr; All Posts</a>
        </div>
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white leading-tight">{title}</h1>
        <div class="mt-3 flex items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
          <time datetime={date.toISOString()}>{formattedDate}</time>
          {formattedLastMod && formattedLastMod !== formattedDate && (
            <span>Updated {formattedLastMod}</span>
          )}
        </div>
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-1.5 mt-3">
            {tags.map((tag) => (
              <span class="text-xs px-2 py-0.5 rounded-full bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <!-- Content -->
      <div class="prose prose-gray dark:prose-invert prose-lg max-w-none
        prose-headings:font-semibold
        prose-a:text-primary-600 dark:prose-a:text-primary-400
        prose-img:rounded-lg prose-img:shadow-md">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>
