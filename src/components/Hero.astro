---
import { author } from '../data/author';
import SocialIcons from './SocialIcons.astro';
---

<section class="py-12 sm:py-16 lg:py-20">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row gap-8 md:gap-12 items-start">
      <!-- Photo and quick info -->
      <div class="flex-shrink-0 w-full md:w-auto flex flex-col items-center md:items-start">
        <img
          src={author.avatar}
          alt={author.shortName}
          class="w-48 h-48 rounded-full object-cover shadow-lg ring-4 ring-white dark:ring-gray-800"
          width="192"
          height="192"
        />
        <div class="mt-4 text-center md:text-left">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">{author.shortName}</h1>
          <p class="text-primary-600 dark:text-primary-400 font-medium">{author.role}</p>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            <a href={author.organizationUrl} target="_blank" rel="noopener noreferrer" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
              {author.organization}
            </a>
          </p>
        </div>
        <div class="mt-4">
          <SocialIcons />
        </div>
      </div>

      <!-- Bio, interests, education -->
      <div class="flex-1 space-y-6">
        <div>
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed">{author.bio}</p>
          <p class="mt-3 text-gray-700 dark:text-gray-300 leading-relaxed">{author.bioShort}</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <!-- Interests -->
          <div>
            <h2 class="text-sm font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400 mb-2">Interests</h2>
            <ul class="space-y-1">
              {author.interests.map((interest) => (
                <li class="text-gray-700 dark:text-gray-300 flex items-center gap-2">
                  <svg class="w-4 h-4 text-primary-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                  {interest}
                </li>
              ))}
            </ul>
          </div>

          <!-- Education -->
          <div>
            <h2 class="text-sm font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400 mb-2">Education</h2>
            <ul class="space-y-2">
              {author.education.map((edu) => (
                <li class="text-sm">
                  <p class="font-medium text-gray-900 dark:text-white">{edu.degree}</p>
                  <p class="text-gray-500 dark:text-gray-400">{edu.institution}, {edu.year}</p>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Contact -->
        <div class="pt-2">
          <p class="text-sm text-gray-600 dark:text-gray-400">
            For inquiries, please contact Scott at
            <a href={`mailto:${author.email}`} class="text-primary-600 dark:text-primary-400 hover:underline">
              {author.email}
            </a>
          </p>
          <p class="mt-1">
            <a
              href="/media/Mourtgos_CV.pdf"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1.5 text-sm font-medium text-primary-600 dark:text-primary-400 hover:underline"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
              </svg>
              Download CV
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
