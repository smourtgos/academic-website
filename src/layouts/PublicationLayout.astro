---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  authors: string[];
  publication: string;
  date: Date;
  doi?: string;
  pdfUrl?: string;
  codeUrl?: string;
  datasetUrl?: string;
  abstract?: string;
}

const { title, authors, publication, date, doi, pdfUrl, codeUrl, datasetUrl, abstract } = Astro.props;
const year = date.getFullYear();
---

<BaseLayout title={`${title} | Scott M. Mourtgos`} description={abstract}>
  <article class="py-12">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <header class="mb-8">
        <div class="flex items-center gap-2 mb-3">
          <a href="/publications" class="text-sm text-primary-600 dark:text-primary-400 hover:underline">&larr; All Publications</a>
        </div>
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white leading-tight">{title}</h1>
        <p class="mt-3 text-gray-600 dark:text-gray-400">{authors.join(', ')}</p>
        <p class="mt-1 italic text-gray-500 dark:text-gray-400">{publication} ({year})</p>

        <!-- Action buttons -->
        <div class="flex flex-wrap items-center gap-3 mt-4">
          {doi && (
            <a
              href={`https://doi.org/${doi}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1.5 text-sm font-medium px-4 py-2 rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
              </svg>
              DOI
            </a>
          )}
          {pdfUrl && (
            <a
              href={pdfUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1.5 text-sm font-medium px-4 py-2 rounded-lg bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
              </svg>
              PDF
            </a>
          )}
          {codeUrl && (
            <a
              href={codeUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1.5 text-sm font-medium px-4 py-2 rounded-lg bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
            >
              Code
            </a>
          )}
          {datasetUrl && (
            <a
              href={datasetUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1.5 text-sm font-medium px-4 py-2 rounded-lg bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
            >
              Dataset
            </a>
          )}
        </div>
      </header>

      <!-- Abstract / Body -->
      {abstract && (
        <div class="mb-8">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Abstract</h2>
          <p class="text-gray-700 dark:text-gray-300 leading-relaxed">{abstract}</p>
        </div>
      )}

      <div class="prose prose-gray dark:prose-invert max-w-none">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>
